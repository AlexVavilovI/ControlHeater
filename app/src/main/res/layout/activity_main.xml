<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_secondary"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Температура на улице"
        android:textAlignment="center"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/streetTemp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/material_dynamic_neutral99"
        android:text="+00.00"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_error"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/TempBoiler1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Температура Котла"
        android:textAlignment="center"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/TempBoiler"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/material_dynamic_neutral99"
        android:text="+00.00"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_error"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Температура теплоносителя на входе"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/TempIn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/material_dynamic_neutral99"
        android:text="+00.00"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_error"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Температура теплоносителя на выходе "
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/TempOut"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/material_dynamic_neutral99"
        android:text="+00.00"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_error"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/SetOnAutomat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="включение автоматического регулирования" />

    <Button
        android:id="@+id/SetOnHeater"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ручное включение нагревателя" />

    <Button
        android:id="@+id/SetOnPumpWater"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Вкл насоса" />
</LinearLayout>